<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Isla_Beta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="ScreenBackground"><item name="background">@color/primary_dark</item></style>
    <style name="textColorHeader"><item name="android:textColor">@color/white</item></style>
    <style name="textColorFooter"><item name="android:textColor">@color/white</item></style>

    <style name="inputMessage">
        <item name="android:backgroundTint">@color/receivedDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sentMessage">
        <item name="android:backgroundTint">@color/sentDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="receivedMessage">
        <item name="android:backgroundTint">@color/receivedDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToggleEyeTint"><item name="tint">@color/primary_light</item></style>
    <style name="cameraTint"><item name="tint">@color/sentLight</item></style>

    <style name="backButtonTint"><item name="tint">@color/primary_light</item></style>
    <style name="backgroundTint"><item name="android:backgroundTint">@color/receivedDark</item></style>
    <style name="buttonTint"><item name="tint">@color/primary_light</item></style>

    <style name="supporterViewBackground"><item name="android:background">@color/secondary_text</item></style>
    <style name="chatBackground"><item name="android:background">@color/darkChat_background</item></style>
</resources>